<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/colorBackGround"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="@string/start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/startButton"
            android:background="@color/colorButton"
            android:onClick="startButton" android:textSize="24sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.667"
            android:layout_marginStart="48dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.067"/>
    <Button
            android:text="@string/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/submitButton"
            android:background="@color/colorButton"
            android:onClick="startSubmit" android:textSize="24sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.667"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.811"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/score"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/textViewScore"
            android:background="@color/colorButton"
            app:layout_constraintVertical_bias="0.837"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:textStyle="bold"
            android:textAlignment="center"/>
    <View
            android:layout_width="350dp"
            android:layout_height="258dp"
            android:id="@+id/view"
            android:background="@color/colorButton"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.488"
            app:layout_constraintVertical_bias="0.199"/>
    <View
            android:layout_width="350dp"
            android:layout_height="5dp"
            android:id="@+id/fret1"
            android:background="@color/colorBlack" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.488" app:layout_constraintTop_toTopOf="@+id/view"/>
    <View
            android:layout_width="350dp"
            android:layout_height="5dp"
            android:id="@+id/fret2"
            android:background="@color/colorBlack" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.488" app:layout_constraintTop_toBottomOf="@+id/fret1"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/fret3"
            app:layout_constraintVertical_bias="0.556"/>
    <View
            android:layout_width="350dp"
            android:layout_height="5dp"
            android:id="@+id/fret3"
            android:background="@color/colorBlack" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.488" app:layout_constraintBottom_toTopOf="@+id/fret4"
            android:layout_marginBottom="48dp"/>
    <View
            android:layout_width="350dp"
            android:layout_height="5dp"
            android:id="@+id/fret4"
            android:background="@color/colorBlack" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.488" app:layout_constraintBottom_toTopOf="@+id/fret5"
            android:layout_marginBottom="48dp"/>
    <View
            android:layout_width="350dp"
            android:layout_height="5dp"
            android:id="@+id/fret5"
            android:background="@color/colorBlack" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.488" android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toTopOf="@+id/fret6"/>
    <View
            android:layout_width="350dp"
            android:layout_height="5dp"
            android:id="@+id/fret6"
            android:background="@color/colorBlack" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.488" app:layout_constraintBottom_toBottomOf="@+id/view"/>

</android.support.constraint.ConstraintLayout>